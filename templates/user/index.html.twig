{% extends 'base.html.twig' %}

{% block title %}Adiministrateur/ liste des Utilisateurs{% endblock %}

{% block body %}
    <div class="bg-blueclear p-5">
        <h1>Liste des Utilisateurs</h1>
    </div>
    <div class="m-auto w-50">
        <table class="table table-responsive m-5">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Nom</th>
                    <th>Prenom</th>
                    <th>Email</th>
                    <th>Roles</th>
                    <th>Password</th>

                    <th>actions</th>
                </tr>
            </thead>
            <tbody>
            {% for user in users %}
                <tr>
                    <td>{{ user.id }}</td>
                    <td>{{ user.nom }}</td>
                    <td>{{ user.prenom }}</td>
                     {# <td>{{ user.roles ? user.roles|json_encode : '' }}</td> #}
                    <td>
                        <select name="" id="" class="form-select w-100">
                        {% for role in user.roles %}
                            <option value="">{{role}}</option>
                        {% endfor %}
                    </td>
                    <td>{{ user.email }}</td>
                    <td>{{ user.password }}</td>
                    <td>
                        <a href="{{ path('app_user_show', {'id': user.id}) }}">Afficher</a>
                        <a href="{{ path('app_user_edit', {'id': user.id}) }}">Modifier</a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="6">aucun enregistrement trouvé</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
    <div class="text-center">
        <a class="btn btn-md btn-blue m-5" href="{{ path('app_user_new') }}">Créer un nouvel utilisateur</a>
    </div>
{% endblock %}
