{% extends 'base.html.twig' %}

{% block title %}Parcours index{% endblock %}

{% block body %}
    <h1>Parcours index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>CodeParcours</th>
                <th>LibelleParcours</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for parcour in parcours %}
            <tr>
                <td>{{ parcour.id }}</td>
                <td>{{ parcour.codeParcours }}</td>
                <td>{{ parcour.libelleParcours }}</td>
                <td>
                    <a href="{{ path('app_parcours_show', {'id': parcour.id}) }}">show</a>
                    <a href="{{ path('app_parcours_edit', {'id': parcour.id}) }}">edit</a>
                </td>
            </tr>
