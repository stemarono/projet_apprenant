                        <a class=" btn btn-md btn-blue text-light" href="{{path('app_pre_inscription_new')}}">Se pré-inscrire</a>
                    </div>
                </div>
            </div>
            <div class=" border-2 border-start border-success aside"></div>
            <div class="me-5">
           
                <div class="my-5">
                    <h4>Informations personnelles</h4>
                </div>
               
                <div class="ms-5">
                    <p>Nom : {{app.user.nom}}</p>
                </div>
                <div class="ms-5">
                    <p>Prénom : {{app.user.prenom}}</p>
                </div>
                <div class="ms-5">
                    <p>Email: {{app.user.email}}</p>
                </div>
                <div class="ms-5">
                    <p>Mot de passe : ******</p>
                </div>
                <div>
                    <a class="btn btn-md btn-green text-light mt-5 ms-5" href="{{path('app_espace_personnel_show')}}">page suivante</a>
                </div>  
           
             <div>
               
                </div>    
