<div class="form bg-clear shadow p-4 m-5">
  {{ form_start(form) }}
  <div class="form">
    <div class="m-3 mx-5">
      {{ form_widget(form.rang) }}
    </div>
    <div class="m-3 mx-5">
      {{ form_widget(form.libelle) }}
    </div>
    <div class="m-3 mx-5">
      {{ form_widget(form.route) }}
    </div>
    <div class="m-3 mx-5">
      {{ form_widget(form.role) }}
    </div>
    <div class="m-3 mx-5">
      {{ form_widget(form.parent) }}
    </div>
  </div>
  <div class="d-flex align-items-center justify-content-end m-5">
    <button class="btn bg-green text-clear">
      {{ button_label|default('Valider') }}
    </button>
  </div>
  {{ form_end(form) }}
</div>

