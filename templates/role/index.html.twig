{% extends 'base.html.twig' %}

{% block title %}Role index{% endblock %}

{% block body %}
    <div class="bg-blueclear my-5 p-5">
        <h1>Role index</h1>
    </div>

    <table class="table table-responsive">
        <thead>
            <tr>
                <th>Id</th>
                <th>Libelle</th>
                <th>Code_role</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for role in roles %}
            <tr>
                <td>{{ role.id }}</td>
                <td>{{ role.libelle }}</td>
                <td>{{ role.codeRole }}</td>
                <td>
                    <a class="btn btn-md btn-green" href="{{ path('app_role_show', {'id': role.id}) }}">Afficher</a>
                    <a  class="btn btn-md btn-blue" href="{{ path('app_role_edit', {'id': role.id}) }}">Modifier</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">aucun enregistrement trouvé</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a class="btn btn-md btn-blue ms-5 my-5" href="{{ path('app_role_new') }}">Créer un nouveau rôle</a>
{% endblock %}
