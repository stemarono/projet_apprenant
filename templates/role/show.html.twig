{% extends 'base.html.twig' %}

{% block title %}Administrateur/rôle{% endblock %}

{% block body %}
    <div class="bg-blueclear p-5 mb-5">
        <h1>Liste des Rôles</h1>
    </div>
    <div class="m-auto w-50 border border-1 border-color shadow bg-clear">
        <table class="table table-responsive">
            <tbody>
                <tr>
                    <th>Id</th>
                    <td>{{ role.id }}</td>
                </tr>
                <tr>
                    <th>Libelle</th>
                    <td>{{ role.libelle }}</td>
                </tr>
                <tr>
                    <th>Code_role</th>
                    <td>{{ role.codeRole }}</td>
                </tr>
            </tbody>
    
        </table>
     </div>
     <div class="d-flex justify-content-around m-5">
    <a class="btn btn-md btn-blue" href="{{ path('app_role_index') }}">Revenir à la liste</a>

    <a class="btn btn-md btn-green" href="{{ path('app_role_edit', {'id': role.id}) }}">Modifier</a>

    {{ include('role/_delete_form.html.twig') }}
    </div>
{% endblock %}
