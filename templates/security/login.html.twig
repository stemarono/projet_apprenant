{% extends 'base.html.twig' %}

{% block title %}Log in!{% endblock %}

{% block body %}
<form method="post">
    {% if error %}
        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

    {% if app.user %}
        <div class="mb-3">
            Vous êtes connecté en tant que {{ app.user.userIdentifier }}, <a href="{{ path('app_logout') }}">se déconnecter</a>
        </div>
    {% endif %}
    <div class="border border-1 border-color shadow bg-clear my-5 w-50 m-auto">
        <div class="d-flex align-items-center justify-content-center">
            <h1 class="h3 mb-3 font-weight-normal">se connecter</h1>
        </div>
        <div class="d-flex align-items-center justify-content-center my-4 ms-5">
            <label class="me-4"for="inputEmail">Email</label>
            <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="" autocomplete="email" required autofocus>
        </div>
        <div class="d-flex align-items-center justify-content-center mb-3">
            <label  class="me-3" for="inputPassword">Mot de passe</label>
            <input type="password" name="password" id="inputPassword" class="" autocomplete="current-password" required>
        </div>
            <input type="hidden" name="_csrf_token"
                   value="{{ csrf_token('authenticate') }}"
            >
   

    {#
        Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
        See https://symfony.com/doc/current/security/remember_me.html

        <div class="checkbox mb-3">
            <label>
                <input type="checkbox" name="_remember_me"> Remember me
            </label>
        </div>
    #}
    <div class="text-center">
        <button class="btn btn-md btn-green my-5 " type="submit">
            Valider
        </button>
    </div>
    </div> 
</form>
{% endblock %}
