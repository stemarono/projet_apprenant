{% extends 'base.html.twig' %} 

{% block title %}Formations{% endblock %} 

{% block body %}

{# titre #}
<div class="container p-5 my-5 bg-blueclear">
  <h1 class="pt-2 pb-5 text-clear">Les formations</h1>
</div>

{# Bouton retour #}
<div class="container">
    <button class="btn bg-blue"><a class="text-clear" href="javascript:history.back()">Retour</a></button>
</div>

{# sous-titre #}
<div class="container p-5">
  <h4>
    Lorem ipsum dolor sit, amet consectetur adipisicing elit. Obcaecati
