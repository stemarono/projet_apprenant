<div class="form bg-clear shadow p-4 m-5">
  {{ form_start(form) }}
  <div class="form">
    <div class="m-3 mx-5">
      {{ form_widget(form.code) }}
    </div>
    <div class="m-3 mx-5">
      {{ form_widget(form.titre) }}
    </div>
    <div class="m-3 mx-5">
      {{ form_widget(form.description) }}
      <p><i>150 caractères maximum</i></p>
    </div>
    <div class="m-3 mx-5">
      {{ form_widget(form.contenu) }}
      <p><i>1000 caractères maximum</i></p>
    </div>
    <div class="m-3 mx-5">
      {{ form_widget(form.photo) }}
    </div>
    <div class="m-3 mx-5">
      {{ form_widget(form.dateFormation) }}
    </div>
    <div class="m-3 mx-5">
      {{ form_widget(form.parcours) }}
    </div>
  </div>
  <div class="d-flex align-items-center justify-content-end m-5">
    <button class="btn bg-green text-clear">
      {{ button_label|default('Valider') }}
    </button>
  </div>
  {{ form_end(form) }}
</div>
